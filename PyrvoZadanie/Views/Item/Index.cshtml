@model IEnumerable<PyrvoZadanie.Models.Item>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Borrowed Items List
            </h2>
        </div>
        <div class="col-6 text-right" style="text-align:right;">
            <a class="btn btn-primary w-50" asp-controller="Item" asp-action="Create">Create new item</a>
        </div>
    </div>
    <br/>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ItemName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Borrower)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Lender)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ItemName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Borrower)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Lender)
                        </td>
                        <td width="25%">
                            <a class="btn btn-success m-1" asp-controller="Item" asp-action="Edit" asp-route-id=@item.Id>Update</a>
                            <form asp-action="Delete" method="post" style="width:fit-content; display:inline">
                                <button type="submit" class="btn btn-danger m-1" asp-controller="Item" asp-action="Delete" asp-route-id=@item.Id>Delete</button>
                            </form>     
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
