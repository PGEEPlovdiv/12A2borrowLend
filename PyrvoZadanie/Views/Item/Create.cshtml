@model PyrvoZadanie.Models.Item

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <label class="col-3 m-1 form-control w-25" asp-for="ItemName"></label>
                <label class="col-3 m-1 form-control w-25" asp-for="Borrower"></label>
                <label class="col-3 m-1 form-control w-25" asp-for="Lender"></label>
            </div>
            <div class="form-group row">
                <input class="col-3 form-control m-1 w-25" asp-for="ItemName" />
                <input class="col-3 form-control m-1 w-25" asp-for="Borrower" />
                <input class="col-3 form-control m-1 w-25" asp-for="Lender" />
            </div>
            <div class="form-group row">
                <button type="submit" class="col-3 btn btn-success m-1">Save</button>
                <a asp-action="Index" class="col-3 btn btn-danger m-1">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
